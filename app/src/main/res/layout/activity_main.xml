<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_gradient_background"
    tools:context=".MainActivity"
    >

    <Button
        android:id="@+id/button_speak_source_language"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/vi"
        />

    <Button
        android:id="@+id/button_speak_target_language"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="@drawable/global"
        />

    <TextView
        android:id="@+id/text_source_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/dp_100"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_20"
        android:text="Source language"/>


    <TextView
        android:id="@+id/text_target_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/dp_100"
        android:text="Target language"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_20"
        android:layout_alignParentLeft="true" />
</RelativeLayout>